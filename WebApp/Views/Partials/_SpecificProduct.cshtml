@model ProductModel



<div class="container product-spec">
    <div class="image-container">
        <img class="large-image" src="@Model.ImageUrl" alt="">

        <div class="small-image-container">
            <img class="small-image" src="@Model.ImageUrl" alt="">
            <img class="small-image" src="@Model.ImageUrl" alt="">
            <img class="small-image" src="@Model.ImageUrl" alt="">
            <img class="small-image" src="@Model.ImageUrl" alt="">
        </div>
    </div>

    <div class="product-specifications">
        <h6 class="product-name">@Model.ProductName</h6>
        <p class="product-description">
            @Model.ProductDescription
        </p>

        <hr class="hr">


        <div class="product-form">
            <div class="product-rating">
                <div class="star-rating">
                    <i class="fa-solid fa-star star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>

                <a href="#" class="ratings">16 Ratings</a>
            </div>

            <p class="price">@string.Format("{0:F0}", Model.Price) :-</p>

            <div class="add-amount">
                <div class="counter">
                    <button class='counter-btn left' type='button'>+</button>
                    <p class='count-amount'>2</p>
                    <button class='counter-btn right' type='button'>-</button>
                </div>

                <div class="btn-container">
                    <button class="theme-button add-cart">
                        Add To Cart <i class="fa-light fa-cart-arrow-down"></i>
                    </button>
                </div>
            </div>

            <div class="availability">
                <i class="fa-solid fa-circle circle-color"></i>
                <p class="availability-text">N/A</p>
            </div>

            <button class="light-button whishlist-btn">Add To Whishlist</button>

            <p class="product-category">@Model.Category.CategoryName</p>
        </div>
    </div>
</div>