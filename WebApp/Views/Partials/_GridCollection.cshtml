@model List<ProductModel>

@{
    var popularProducts = await productService.GetByNewCollectionTagAsync();
}

@if(popularProducts.Any()) 
{
<section class="container bestselling">
    <h3 class="sectiontitle">New Collection</h3>

    <div class="collection">

        @foreach(var popularProduct in popularProducts.Take(8))
        {
           
            <div class="card collection-card">
                 <a asp-controller="Products" asp-action="Details" asp-route-productName="@popularProduct.ProductName">
                <img class="card-image-small" alt="" src="@popularProduct.ImageUrl">

                <div class="card-information">
                    <h6 class="card-title">@popularProduct.ProductName</h6>
                        <p class="card-price">@string.Format("{0:F0}", popularProduct.Price) :-</p>
                    <a class="to-cart"><i class="fa-light fa-cart-arrow-down"></i></a>
                        </div>
                    </a>
            </div>
            
        }
    </div>
</section>
}