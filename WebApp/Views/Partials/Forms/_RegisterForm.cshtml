@model AccountRegisterViewModel

    <div class="container form-container">
        <div class="row">
            <div class="title col-12">
                <h3>Create your account</h3>
            </div>
        </div>
        <form method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-6 d-flex flex-column">
                        <label asp-for="FirstName">First name</label>
                        <input asp-for="FirstName" onkeyup="firstAndLastNameValidation(event)" autocomplete="off" />
                        <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="LastName" >Last name</label>
                        <input asp-for="LastName" onkeyup="firstAndLastNameValidation(event)" autocomplete="off" />
                        <small class="text-danger"><span asp-validation-for="LastName"></span></small>
                    </div>
                </div>
                <div class="row d-flex">
                    <div class="form-group col-6">
                        <label asp-for="PhoneNumber">Phone number</label>
                        <input asp-for="PhoneNumber" autocomplete="off" />
                        <small class="text-danger"><span asp-validation-for="PhoneNumber"></span></small>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="CompanyName">Company name</label>
                        <input asp-for="CompanyName" autocomplete="off" />
                        <small class="text-danger"><span asp-validation-for="CompanyName"></span></small>
                    </div>
                </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm password</label>
                <input asp-for="ConfirmPassword" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="StreetName">StreetName</label>
                <input asp-for="StreetName" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="StreetName"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="PostalCode">Postal code</label>
                <input asp-for="PostalCode" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="City"></span></small>
            </div>

            <div class="col-12">
                <div class="d-grid form-btn">
                    <button type="submit" class="theme-button">Create Account!</button>
                </div>

            </div>
        </form>
    </div>