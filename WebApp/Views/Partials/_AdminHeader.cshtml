<header>
    <div class="container header">
        <div class="logo"><img src="images/Logo.svg" alt="">bmerketo</div>
        <nav id="menu" class="menu-links">
            <a class="link" asp-controller="admin" asp-action="Index">DASHBOARD</a>
            <a class="link" asp-controller="admin" asp-action="Users">USERLIST</a>
            <a class="link" asp-controller="admin" asp-action="createproduct">CREATE PRODUCT</a>
        </nav>
        <nav class="menu-icons">

            @if (signInManager.IsSignedIn(User))
            {
                <a class="link" asp-controller="account" asp-action="index">@User.Identity?.Name</a>
                <a class="link" asp-controller="account" asp-action="logout">Logout</a>
            }

        </nav>
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>